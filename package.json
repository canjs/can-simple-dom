{
  "name": "can-simple-dom",
  "version": "1.0.7",
  "description": "A simple JS DOM.",
  "main": "dist/cjs/simple-dom.js",
  "scripts": {
    "build": "node build.js",
    "prepublish": "node build.js",
    "preversion": "npm test",
    "publish": "git push origin && git push origin --tags",
    "release:prerelease": "npm version prerelease && npm publish",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "test": "testee lib/test/test.html --browsers firefox --reporter Spec"
  },
  "keywords": [
    "html",
    "dom",
    "serializer",
    "parser"
  ],
  "author": "Kris Selden and Bitovi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/canjs/can-simple-dom.git"
  },
  "system": {
    "main": "simple-dom.js",
    "directories": {
      "lib": "lib"
    },
    "npmIgnore": [
      "testee"
    ]
  },
  "devDependencies": {
    "jquery": "^2.2.0",
    "steal": "^1.2.9",
    "steal-qunit": "^1.0.1",
    "steal-tools": "^1.1.2",
    "testee": "^0.3.1"
  },
  "dependencies": {
    "he": "^1.1.0",
    "micro-location": "^0.1.4",
    "simple-html-tokenizer": "^0.2.1"
  }
}
